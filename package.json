{
  "name": "palladiumsense",
  "displayName": "PalladiumSense",
  "description": "An extension that give snippets and tools for Palladium Minecraft addon creation",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "publisher": "bandithelps",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:palladiumsense.newPower",
    "onCommand:palladiumsense.viewDocumentation",
    "onCommand:palladiumsense.initializeAddon",
    "onCommand:palladiumsense.packageAddon",
    "onLanguage:json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "palladiumsense.newPower",
        "title": "New Power"
      },
      {
        "command": "palladiumsense.viewDocumentation",
        "title": "View Palladium Documentation"
      },
      {
        "command": "palladiumsense.initializeAddon",
        "title": "Initialize New Addon"
      },
      {
        "command": "palladiumsense.packageAddon",
        "title": "Package Addon"
      }
    ],
    "configuration": {
      "title": "PalladiumSense",
      "properties": {
        "palladiumsense.documentationPath": {
          "type": "string",
          "default": "",
          "scope": "application",
          "description": "Path to your Palladium documentation folder (with abilities.html and conditions.html). Used when mods/documentation/palladium cannot be found in the workspace."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint client/src server/src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "jsonc-parser": "^3.3.1",
    "jszip": "^3.10.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BanditHelps/PalladiumSense-Extension"
  }
}
